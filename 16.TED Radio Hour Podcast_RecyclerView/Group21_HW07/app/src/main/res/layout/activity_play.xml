<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.febin.group21_hw07.PlayActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textViewPlayTitle"
        android:textColorLink="@color/title"
        android:gravity="center"
        android:textColor="@color/title"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageViewPlayTitle"
        android:layout_height="180dp"
        android:background="@drawable/border"
        android:layout_width="200dp"
        android:layout_below="@+id/textViewPlayTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines = "6"
        android:scrollbars = "vertical"
        android:layout_below="@+id/imageViewPlayTitle"
        android:layout_alignLeft="@+id/imageViewPlayTitle"
        android:layout_alignStart="@+id/imageViewPlayTitle"
        android:layout_marginTop="17dp"
        android:id="@+id/textViewPlayDesc"
        android:layout_alignRight="@+id/imageViewPlayTitle"
        android:layout_alignEnd="@+id/imageViewPlayTitle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewPlayDur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayoutPlay">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/playbutton"
            android:scaleType="fitCenter"
            android:background="@null"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageButtonPlayPause" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/seekBarPlay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textViewPlayDate"
        android:layout_below="@+id/textViewPlayDesc"
        android:layout_alignLeft="@+id/textViewPlayDesc"
        android:layout_alignStart="@+id/textViewPlayDesc"
        android:textColor="@color/action"
        android:layout_alignRight="@+id/textViewPlayDesc"
        android:layout_alignEnd="@+id/textViewPlayDesc" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textViewPlayDur"
        android:layout_below="@+id/textViewPlayDate"
        android:layout_alignLeft="@+id/textViewPlayDate"
        android:layout_alignStart="@+id/textViewPlayDate"
        android:textColor="@color/title" />

</RelativeLayout>
