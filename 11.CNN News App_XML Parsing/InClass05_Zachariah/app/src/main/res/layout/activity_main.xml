<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.febin.inclass05_zachariah.MainActivity">

    <Button
        android:text="@string/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="112dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="10dp"
        android:id="@+id/buttonget"
        android:textAllCaps="false" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/previous"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButtonFirst"
        android:layout_toEndOf="@+id/imageButtonFirst"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/imageButtonPrev" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/next"
        android:layout_alignBottom="@+id/buttonFinish"
        android:layout_toRightOf="@+id/buttonFinish"
        android:layout_toEndOf="@+id/buttonFinish"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/imageButtonNext" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/last"
        android:layout_alignBottom="@+id/imageButtonNext"
        android:layout_toRightOf="@+id/imageButtonNext"
        android:layout_toEndOf="@+id/imageButtonNext"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/imageButtonLast" />

    <ImageButton
        android:layout_height="50dp"
        app:srcCompat="@drawable/first"
        android:id="@+id/imageButtonFirst"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="50dp"
        android:layout_alignBottom="@+id/buttonFinish"
        android:layout_alignLeft="@+id/linearLayoutOutside"
        android:layout_alignStart="@+id/linearLayoutOutside" />

    <Button
        android:text="@string/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/buttonFinish"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButtonPrev"
        android:layout_toEndOf="@+id/imageButtonPrev" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/linearLayoutOutside"
        android:background="@drawable/border"
        android:layout_height="350dp"
        android:layout_above="@+id/imageButtonPrev"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayout" />
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
